{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "module": "es6",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": "packages",
    "paths": {
      "@library/core": ["packages/core/src"],
      "@library/icons": ["packages/icons/src"],
    }
  }
}